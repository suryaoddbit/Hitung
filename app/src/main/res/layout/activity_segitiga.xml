<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgbangundatar"
    android:orientation="vertical"
    tools:context="stikombali.alathitung.segitiga"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilihan"
        android:textAlignment="center"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/btnSamakaki"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="Segitiga Sama kaki"/>
    <Button
        android:id="@+id/btnSikusiku"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="Segitiga siku siku"/>
    <Button
        android:id="@+id/btnSsamasisi"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="Segitiga sama sisi"/>


</LinearLayout>
